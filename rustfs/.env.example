# RustFS S3-Compatible Object Storage Configuration
# Copy this file to .env and customize the values for your deployment

# Volume Mapping
# Source: Host path where data will be stored
# Destination: Container internal mount point
VOLUME_DATA_SRC='/path/to/data/storage'
VOLUME_DATA_DST='/data'

# S3 Authentication Credentials
# Generate secure random strings for production use
# Access key: 20 alphanumeric characters (A-Z, 0-9)
# Secret key: 40+ character random string
RUSTFS_ACCESS_KEY='CHANGEME_20_CHARS_EXAMPLE'
RUSTFS_SECRET_KEY='CHANGEME_40_CHARS_SECRET_KEY_EXAMPLE_12345'

# Server Configuration
# Domain: Single domain for S3 virtual host-style access (e.g., bucket.s3.example.com)
# Used for virtual-hosted-style requests instead of path-style (s3.example.com/bucket)
RUSTFS_DOMAINS='s3.example.com'

# Console Web Interface
# Enable web-based management console (true/false)
RUSTFS_CONSOLE_ENABLE='true'

# CORS Configuration
# Allowed origins for API requests (use '*' for development, specific domains for production)
# Console CORS: Origins allowed to access the management console
RUSTFS_CORS_ALLOWED_ORIGINS='*'
RUSTFS_CONSOLE_CORS_ALLOWED_ORIGINS='*'

# Logging Configuration
# Log levels: error, warn, info, debug, trace
# Recommended: 'warn' for production, 'info' or 'debug' for troubleshooting
RUST_LOG='warn'

# AWS Region
# S3 region identifier (doesn't affect functionality, but required by some clients)
# Common values: us-east-1, eu-central-1, ap-southeast-1
RUSTFS_REGION='eu-central-1'
